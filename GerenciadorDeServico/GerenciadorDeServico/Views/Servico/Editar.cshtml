@model ServicoModel

@{
    ViewData["Title"] = "Editar Serviço";
}
<div class="text-center">
    <h1 class="display-4">Editar serviço</h1>
</div>

<form asp-controller="Servico" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group col-md-6">
        <label for="txtlocal" class="form-label">Local</label>
        <input type="text" asp-for="Local" class="form-control" id="txtlocal" placeholder="Nome do Local">
        @Html.ValidationMessageFor(x => x.Local)
    </div>

    <div class="form-group col-md-6">
        <label for="txtnumero" class="form-label">Numero</label>
        <input type="number" asp-for="Numero" class="form-control" id="txtnumero" placeholder="Número do Local">
        @Html.ValidationMessageFor(x => x.Numero)
    </div>

    <div class="form-group col-md-6">
        <label for="txtdata" class="form-label">Data</label>
        <input asp-for="Data" type="date" class="form-control" id="txtdata" placeholder="Dia do trabalho exercido">
        @Html.ValidationMessageFor(x => x.Data)
    </div>

    <div class="form-group col-md-6">
        <label for="nbvalor" class="form-label">Valor</label>
        <input asp-for="Valor" type="number" class="form-control" id="nbvalor" placeholder="Preço do serviço">
        @Html.ValidationMessageFor(x => x.Valor)
    </div>

    <div class="form-group col-md-6">
        <label for="txtdescricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control" id="txtdescricao" rows="3"></textarea>
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Servico" asp-action="Alterar">Alterar</button>
    <button type="submit" class="btn btn-secondary" asp-controller="Servico" asp-action="Index">Voltar</button>
</form>